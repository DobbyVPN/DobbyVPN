# EditorConfig
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab

[*.{kt,kts}]
indent_style = space
indent_size = 4

[*.swift]
indent_style = space
indent_size = 4

[*.{yml,yaml,json,toml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.xml]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[Dockerfile*]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2
